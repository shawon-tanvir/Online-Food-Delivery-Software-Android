<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    >


    <EditText
        android:id="@+id/emailbox"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="147dp"
        android:background="#393b3b"
        android:textColor="#edf7f6"
        android:textColorHint="#edf7f6"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordbox"
        style="@android:style/Widget.Material.EditText"
        android:drawableLeft="@drawable/ic_action_lock"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#393b3b"
        android:ems="10"
        android:textColor="#edf7f6"
        android:textColorHint="#edf7f6"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/emailbox" />

    <Button
        android:id="@+id/logbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25sp"
        android:textColor="#07e6cc"
        android:background="#393b3b"
        android:layout_marginTop="11dp"
        android:onClick="checkDatabase"
        android:layout_below="@+id/passwordbox"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/createbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create New ID"
        android:background="#393b3b"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:onClick="gotocreateID"
        android:textColor="#07e6cc"
        android:layout_below="@+id/logbutton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/download"
        android:layout_alignParentTop="true"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>

