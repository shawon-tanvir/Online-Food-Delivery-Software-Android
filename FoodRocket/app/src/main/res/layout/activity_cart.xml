<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd4ef"
    tools:context="com.second.foodrocket.CartActivity">

    <ListView
        android:id="@+id/cartlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <TextView
        android:id="@+id/total"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="30dp"
        android:text="Total (Incl, VAT)"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:layout_below="@id/cartlist"/>
    <TextView
        android:id="@+id/totaltaka"
        android:layout_below="@id/cartlist"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/total"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/contact"
        android:layout_width="140dp"

        android:layout_height="30dp"
        android:text="Contact Info"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:layout_below="@id/total"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/contactinfo"
        android:layout_toRightOf="@id/contact"
        android:layout_below="@id/totaltaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Contact Info"
        android:textSize="15sp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/delivary"
        android:layout_width="160dp"

        android:layout_height="30dp"
        android:text="Delivary Address"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:layout_below="@id/contact"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/delivaryaddress"
        android:layout_toRightOf="@id/delivary"
        android:layout_below="@id/contactinfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAlignment="viewEnd"
        android:hint="Contact Info"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="140dp"

        android:layout_height="30dp"
        android:text="Delivary Time"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:layout_below="@id/delivary"

        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/timebutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_toRightOf="@id/time"
        android:textSize="20sp"
        android:backgroundTint="#d1d7ec"
        android:layout_marginTop="15dp"
        android:text="Pick Time"
        android:background="#ffffffff"
        android:layout_below="@id/delivaryaddress"/>

    <Button
        android:id="@+id/addorder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timebutton"
        android:layout_marginTop="30dp"/>


</RelativeLayout>
